{
  "name": "gulp-ignite-task-boilerplate",
  "description": "A boilerplate for building gulp ignite tasks.",
  "version": "0.0.0-semantically-released",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "watch": "mocha --compilers js:babel-core/register --watch",
    "build": "babel src -d ./",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscarmona/gulp-ignite-task-boilerplate.git"
  },
  "keywords": [
    "gulp",
    "starter",
    "tasks"
  ],
  "author": "Javier Carmona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jscarmona/gulp-ignite-task-boilerplate/issues"
  },
  "homepage": "https://github.com/jscarmona/gulp-ignite-task-boilerplate#readme",
  "dependencies": {
    "gulp": "^3.9.0",
    "yargs": "^3.32.0"
  },
  "devDependencies": {
    "babel-cli": "6.6.4",
    "babel-core": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "chai": "3.5.0",
    "commitizen": "2.6.1",
    "cz-conventional-changelog": "1.1.5",
    "ghooks": "1.0.3",
    "mocha": "2.4.5",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-push": "npm test",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
