{
  "name": "gulp-ignite-task-boilerplate",
  "description": "A boilerplate for building gulp ignite tasks.",
  "version": "0.0.1",
  "main": "index.js",
  "scripts": {
    "test": "mocha --compilers js:babel-core/register",
    "watch": "mocha --compilers js:babel-core/register -w",
    "build": "babel src -d ./",
    "prepublish": "npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jscarmona/gulp-ignite-task-boilerplate.git"
  },
  "keywords": [
    "gulp",
    "starter",
    "tasks"
  ],
  "author": "Javier Carmona",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jscarmona/gulp-ignite-task-boilerplate/issues"
  },
  "homepage": "https://github.com/jscarmona/gulp-ignite-task-boilerplate#readme",
  "dependencies": {
    "gulp": "3.9.0",
    "gulp-ignite": "1.3.0",
    "yargs": "3.32.0"
  },
  "devDependencies": {
    "babel-cli": "6.6.4",
    "babel-core": "6.6.5",
    "babel-preset-es2015": "6.6.0",
    "chai": "3.5.0",
    "eslint": "2.10.1",
    "eslint-config-airbnb-base": "3.0.1",
    "eslint-plugin-import": "1.8.0",
    "ghooks": "1.0.3",
    "mocha": "2.4.5"
  },
  "config": {
    "ghooks": {
      "pre-push": "npm test",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  }
}
